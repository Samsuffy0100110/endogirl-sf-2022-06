{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row g-0">
        <div class="col-lg-8 d-flex flex-column align-items-center">
            <img class="img-fluid" src="{{ asset('build/images/arrowHomeUp.png') }}" alt="Arrow">
        </div>
        <div class="col-lg-4">
            <h1 class="text-warning text-center">{{ subject.name }}</h1>
        </div>
    </div>
    <div class="row g-0">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-8 mb-5">
            {% for topic in topics %}
                <div class="card  rounded shadow bg-info"> 
                    <div class="card-body d-flex justify-content-between">
                        <h5 class="card-title">{{ topic.title }}</h5>
                        <p class="card-text fs-5"><small class="text-muted">Cr√©er le {{ topic.createdAt |format_datetime('full', 'short', locale='fr') }}</small></p>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-lg-2">
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ topic.title }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row g-0">
        <div class="col-lg-8 d-flex flex-column align-items-center">
            <img class="img-fluid mt-5 mb-5" src="{{ asset('build/images/arrowHomeUp.png') }}" alt="Arrow">
            <a class="mt-3 text-dark nav-link fw-bold mb-5" href="{{ path('forum_topic', {'slug': topic.slug}) }}">Retour sur le topic {{ topic.title }}</a>
        </div>
        <div class="col-lg-4">
            <h1 class="text-warning text-center mt-5 mb-5">Modification de ton topic</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-8">
            {{ form(form) }}
        </div>
        <div class="col-lg-2">
        </div>
    </div>
</div>
{% endblock %}
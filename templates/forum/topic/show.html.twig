{% extends 'base.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
    <h1>Topic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ topic.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ topic.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ topic.content }}</td>
            </tr>
            <tr>
                <th>Reply</th>
                <td>{{ topic.reply }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ topic.createdAt ? topic.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('forum_topic_index') }}">back to list</a>

    <a href="{{ path('forum_topic_edit', {'id': topic.id}) }}">edit</a>

    {{ include('forum/topic/_delete_form.html.twig') }}
{% endblock %}

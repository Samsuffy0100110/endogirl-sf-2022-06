{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8">
            <img src="{{ asset('build/images/arrowHomeUp.png') }}" alt="Arrow">
        </div>
        <div class="col-lg-4">
            <h1 class="text-warning">Forum</h1>
    </div>
    <div class="row m-5">
        <div class="col-lg-8">
            <h3 class="text-center text-warning mb-5">les Cat√©gories et leurs sujets</h3>
            <div id="style-scroll" class="card bg-primary p-5 shadow rounded scrollbar">
                {% for category in categories %}
                <h4 class="text-warning mt-3">{{ category.name }}</h4>
                    {% for subject in category.subjects %}
                    <a class="text-decoration-none" href="{{ path('forum_subject', { 'slug': subject.slug })}}">
                    <div class="card border-secondary mt-2 mb-2">
                        <h5 class="card-header text-dark mb-2">{{ subject.name }}</h5>
                        <p class="card-text text-dark mb-2 pe-3 ps-3">{{ subject.summary }}</p>
                    </div>
                    </a>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        <div class="col-lg-4">
            <h3 class="text-center text-warning mb-5">Les derniers Topics</h3>
            <div class="card p-5 shadow rounded">
                {% for topic in topics %}
                    <p class="text-dark fs-5 mb-5">{{ topic.title }}</p>
                    <hr>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

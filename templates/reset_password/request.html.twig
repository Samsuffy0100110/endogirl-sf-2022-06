{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="container">
        <div class="row g-0">
            <div class="col-lg-8 mb-5">
                <img class="img-fluid" src="{{ asset('build/images/arrowHomeUp.png') }}" alt="Arrow">
            </div>
            <div class="col-lg-4">
                <h1 class="text-warning">Nouveau mot de passe</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
            </div>
            <div class="col-lg-4 bg-info p-5 mt-5 rounded shadow">
                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div>
                    <small>
                        Entrer votre email pour recevoir
                        un lien pour r√©initialiser votre mot de passe.
                    </small>
                </div>
                <button class="btn btn-outline-warning mt-3">Envoyer</button>
                {{ form_end(requestForm) }}
            </div>
            <div class="col-lg-4">
            </div>
        </div> 
    </div>
{% endblock %}

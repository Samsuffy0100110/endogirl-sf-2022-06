{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <form action="{{ path('login') }}" method="post" class="bg-info p-3 shadow rounded">
        <div class="form-group mb-5 mt-5">
            <label for="username">Email</label>
            <input type="email" id="username"
            name="_username" placeholder="votremail@endoloris.com"
            value"{{ last_username }}" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="_password" class="form-control">
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-group mb-3 d-flex justify-content-end">
            <input type="submit" value="Connexion" class="btn btn-outline-warning mt-3">
        </div>
            <a href="{{ path('app_forgot_password_request')}}">Mot de passe oubli√© ?</a>
    </form>



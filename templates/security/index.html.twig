{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <img src="{{ asset('build/images/arrowHomeUp.png') }}" alt="Arrow">
            <h1 class="text-warning text-center mt-5">Inscription</h1>
            {{ render(controller('App\\Controller\\SecurityController::register')) }}
        </div>
        <div class="col-lg-4 d-flex align-items-center">
            <img src="{{ asset('build/images/sign.png') }}" alt="SignIn">
        </div>
        <div class="col-lg-4">
        <h1 class="text-warning mb-5">Connexion</h1>
        {{ render(controller('App\\Controller\\SecurityController::login')) }}
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-lg-1">
        </div>
        <div class="col-lg-4">
        </div>
        <div class="col-lg-7"> 
            <img src="{{ asset('build/images/arrowdown.png') }}" alt="Arrow">
        </div>
    </div>
</div>
{% endblock %}
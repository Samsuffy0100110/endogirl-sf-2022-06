{% extends 'base.html.twig' %}

{% block title %}Connexion/Inscription Endoloris{% endblock %}

{% block body %}
<div class="container">
    <div class="row g-0">
        <div class="col-lg-4 p-3">
            <img class="img-fluid" src="{{ asset('build/images/arrowHomeUp.png') }}" alt="Arrow">
            <h1 class="text-warning text-center mt-5">Inscription</h1>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|raw }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
            {{ render(controller('App\\Controller\\RegistrationController::register')) }}
        </div>
        <div class="col-lg-4 d-flex align-items-center">
            <img class="img-fluid" src="{{ asset('build/images/sign.png') }}" alt="SignIn">
        </div>
        <div class="col-lg-4 p-3">
        <h1 class="text-warning mb-5">Connexion</h1>
        {{ render(controller('App\\Controller\\SecurityController::login')) }}
        </div>
    </div>
    <div class="row mt-5 g-0">
        <div class="col-lg-1">
        </div>
        <div class="col-lg-4">
        </div>
        <div class="col-lg-7"> 
            <img class="img-fluid" src="{{ asset('build/images/arrowdown.png') }}" alt="Arrow">
        </div>
    </div>
</div>
{% endblock %}
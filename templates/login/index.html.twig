{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <img src="{{ asset('build/images/arrowHomeUp.png') }}" alt="Arrow">
        </div>
        <div class="col-lg-4">
        <h1 class="text-warning mb-5">Connexion</h1>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('login') }}" method="post" class="bg-info p-3 shadow rounded">
            <div class="form-group mb-5 mt-5">
                <label for="username">Email</label>
                <input type="email" id="username"
                name="_username" placeholder="votremail@endoloris.com"
                value"{{ last_username }}" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Connexion" class="btn btn-outline-warning mt-3">
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-lg-1">
        </div>
        <div class="col-lg-4">
        </div>
        <div class="col-lg-7">
            <img src="{{ asset('build/images/arrowdown.png') }}" alt="Arrow">
        </div>
    </div>
</div>
{% endblock %}